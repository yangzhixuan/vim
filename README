" vim: foldmethod=indent
"general settings begin
    set number
    set scrolloff=1
    set incsearch

    "enhanced completion in cmd line
    set wildmenu

    set shiftwidth=4
    set tabstop=4
    set expandtab

    set autoread
    set autoindent
    syntax on

    set mouse=a
    set whichwrap=h,l,[,]

    "colorscheme torte
    set cursorline
    set hlsearch
    set display+=lastline

    set foldmethod=syntax
    set foldlevelstart=99
    filetype indent plugin on

    "speed up external commands
    set shell=/bin/zsh\ -f
"end

"dictionary completion <C-X><C-K> begin
    set dictionary+=/usr/share/dict/cracklib-small
    set isk+=-
"end

"forget-those begin
    inoremap <ESC> <NOP>
"end

"shortcuts begin
    let mapleader = ","
    let localleader = "\\"

    nnoremap <F5> :make %< <CR>
    inoremap <F5> <ESC>:make %< <CR>

    "explanation: I want to use <A-q> as NERDTree, but xfce-terminal modified
    "the key sequence(learn more in help :map-alt-keys), so use <C-v><A-q> instead.
    noremap q :NERDTreeToggle<CR>

    "use <space> to open or close folds
    nnoremap <SPACE> za

    "n/v/o mode mappings begin
        noremap H ^
        noremap L $
        noremap Y y$
    "end

    "normal mode mappings begin
        nnoremap \ gt
        nnoremap <tab> gT
        nnoremap <C-b>n  :bnext<CR>
        nnoremap <C-b>p  :bprev<CR>

        nnoremap <C-a> ggVG
        nnoremap <C-n> :tabnew<space>
        nnoremap <C-l> :nohlsearch<CR>
        nnoremap _ ddkP
        nnoremap - ddp
        nnoremap <leader>rc :vsp $MYVIMRC<CR>
        nnoremap <leader>src :source $MYVIMRC<CR>
        nnoremap <leader>o o<esc>k
    "end

    "insert mode mappings
        inoremap jk <esc>
        inoremap <C-Z> <ESC>zza
        inoremap <C-u> <ESC>viwUea
    "end


    "surround the word begin
        nnoremap <leader>" viw<esc>a"<esc>hbi"<esc>lel
        nnoremap <leader>( viw<esc>a)<esc>hbi(<esc>lel
        vnoremap <leader>" <esc>`>a"<esc>`<i"<esc>
        vnoremap <leader>( <esc>`>a)<esc>`<i(<esc>
    "end

    "operator-pending mappings begin
        onoremap in( :<C-u>normal! f(vi(<CR>
        onoremap il( :<C-u>normal! F)vi(<CR>
        onoremap in" :<C-u>normal! f"vi"<CR>
        onoremap il" :<C-u>normal! F"vi"<CR>
    "end
"end

"smooth scroll begin
    nnoremap <C-U> <C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y><C-Y>
    nnoremap <C-D> <C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E><C-E>
"end

"pathogen begin
    runtime bundle/vim-pathogen/autoload/pathogen.vim
    call pathogen#infect()
"end

"powerline begin
    set nocompatible
    set t_Co=256
    let g:Powerline_symbols = 'fancy'
    set guifont=Monaco\ for\ Powerline
    set laststatus=2
"end

"ctrlp begin
    set runtimepath^=~/.vim/bundle/ctrlp.vim
"end

"ruby begin
    augroup rubyindent
        autocmd!
        autocmd BufNewFile,BufRead *.rb set softtabstop=2 | set shiftwidth=2  
        autocmd FileType ruby set softtabstop=2 | set shiftwidth=2  
    augroup END
"end


"fcitx begin"
    let g:prev_status = 0
    function! Fcitx2en()
       let g:prev_status = system("fcitx-remote") 
       if g:prev_status != 1
          let l:a = system("fcitx-remote -c")
       endif
    endfunction

    function! Fcitx2zh()
       if g:prev_status == 2
          let l:a = system("fcitx-remote -o")
       endif
    endfunction

    augroup fcitx_aucmd
        autocmd!
        autocmd InsertLeave * call Fcitx2en()
        autocmd InsertEnter * call Fcitx2zh()
    augroup END
"end

"html_preview begin
    augroup html_aucmd
        autocmd!
        autocmd FileType html nnoremap <leader>p :!firefox % <CR><CR>
    augroup END
"end

"show space as dot
    set listchars=tab:â–¸\ ,trail:Â·
    set list
"end
